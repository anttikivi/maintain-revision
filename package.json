{
  "name": "maintain-revision",
  "version": "0.11.0-dev",
  "description": "An action keeping a remote development version number up to date for projects",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && ncc build -o dist lib/index.js && ncc build -o dist/upload lib/upload/index.js",
    "check-all": "npm-run-all format --parallel lint test",
    "ci-check": "npm-run-all nit --parallel lint test",
    "format": "prettier --config .prettierrc.json --write *.js **/*.ts",
    "nit": "prettier --config .prettierrc.json --list-different *.js **/*.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf lib && rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/visiosto/maintain-revision.git"
  },
  "author": "Antti Kivi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/visiosto/maintain-revision/issues"
  },
  "homepage": "https://github.com/visiosto/maintain-revision#readme",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "aws-sdk": "^2.853.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  }
}
